<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="pojoGenerator" class="com.nietzche.codegenerator.generator.PojoGenerator">
        <property name="vmFileName" value="pojo.vm"/>
        <property name="targetFileName" value="sourcePath:com/game/sango/bean/{{className}}.java"/>
    </bean>

    <bean id="daoGenerator" class="com.nietzche.codegenerator.generator.BaseGenerator">
        <property name="vmFileName" value="dao.vm"/>
        <property name="targetFileName" value="sourcePath:com/game/sango/dao/{{className}}Dao.java"/>
    </bean>

    <bean id="mapperGenerator" class="com.nietzche.codegenerator.generator.MapperGenerator">
        <property name="vmFileName" value="mapper.vm"/>
        <property name="targetFileName" value="resourcePath:mapper/{{className}}Mapper.xml"/>
    </bean>

    <bean id="serviceGenerator" class="com.nietzche.codegenerator.generator.BaseGenerator">
        <property name="vmFileName" value="service.vm"/>
        <property name="targetFileName" value="sourcePath:com/game/sango/service/{{className}}Service.java"/>
    </bean>

    <bean id="controllerGenerator" class="com.nietzche.codegenerator.generator.BaseGenerator">
        <property name="vmFileName" value="controller.vm"/>
        <property name="targetFileName" value="sourcePath:com/game/sango/controller/{{className}}Controller.java"/>
    </bean>

</beans>